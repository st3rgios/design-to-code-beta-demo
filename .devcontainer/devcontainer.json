{
  "name": "Design-to-Code Beta Demo",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",

  "customizations": {
    "vscode": {
      "extensions": [
        "/workspaces/${localWorkspaceFolderBasename}/.devcontainer/extensions/vscode-design-to-code-2026.2.9-beta.vsix",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  },

  "remoteEnv": {
    "DESIGN_TO_CODE_API_TOKEN": "${localEnv:DESIGN_TO_CODE_API_TOKEN}",
    "DESIGN_TO_CODE_API_URL": "${localEnv:DESIGN_TO_CODE_API_URL}",
    "FIGMA_ACCESS_TOKEN": "${localEnv:FIGMA_ACCESS_TOKEN}"
  },

  "postCreateCommand": "npm install && bash .devcontainer/scripts/configure-extension.sh",

  "forwardPorts": [4200],

  "portsAttributes": {
    "4200": {
      "label": "Design-to-Code Beta Demo",
      "onAutoForward": "openPreview"
    }
  }
}
